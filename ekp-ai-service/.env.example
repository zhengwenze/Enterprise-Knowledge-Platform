# 数据库配置
DATABASE_URL=postgresql://ekp_user:ekp_password@localhost:5432/ekp_db
REDIS_URL=redis://localhost:6379/0
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ============================================
# 本地模型配置（RTX 4060 8GB 显存优化）
# ============================================

# 使用本地模型
USE_LOCAL_LLM=true

# Docker 容器内访问宿主机 Ollama
# Windows/Mac: http://host.docker.internal:11434
# Linux: http://172.17.0.1:11434 或使用 --network=host
LOCAL_LLM_URL=http://host.docker.internal:11434

# LLM 模型选择（8GB 显存推荐）
# 选项: qwen2.5:7b, llama3.1:8b, mistral:7b, chatglm3:6b
LLM_MODEL=qwen2.5:7b

# 视觉模型（用于图片理解）
VISION_MODEL=llava:7b

# 嵌入模型（CPU 运行，不占用显存）
EMBEDDING_MODEL=BAAI/bge-large-zh
EMBEDDING_DIMENSION=1024

# RAG-Anything 配置
RAG_WORKING_DIR=./rag_storage
RAG_PARSER=mineru
RAG_PARSE_METHOD=auto
ENABLE_IMAGE_PROCESSING=true
ENABLE_TABLE_PROCESSING=true
ENABLE_EQUATION_PROCESSING=true

# 文档处理配置
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
